{
  "manifest_version": 2,
  "name": "DocVersionRedirector",
  "description": "Automatically redirect to a specific documentation version",
  "author": "Leo Shklovskii",
  "version": "0.10.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "page_action": {
    "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png"
    },
    "default_title": "DocVersionRedirector",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://docs.ansible.com/*",
        "*://docs.bazel.build/*",
        "*://docs.djangoproject.com/*",
        "*://docs.python.org/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ]
}
