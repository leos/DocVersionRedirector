{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        // "noImplicitAny": true,
        // "strictNullChecks": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["ES2017", "DOM", "DOM.Iterable"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist/js",
        "rootDir": "src",
        "sourceMap": true,
        "target": "ES2017"
    },
    "exclude": [
        "webpack.*.js",
        "dist/",
    ]
}